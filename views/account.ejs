<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Tweak'sUp</title>
    <link href="https://fonts.googleapis.com/css?family=Bitter|Josefin+Slab|Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="feed.css">
</head>

<body>
    <nav class="navbar navbar-default" style="background-color: #ffbe4a;height: 90px;">
        <div class="container">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    <a class="navbar-brand" href="/" id="brand"><img id="brandImage" src="tweaksup_new.jpg"></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right" style="margin-top: 20px;color: black;">
                        <li><a href="#" data-toggle="modal" data-target="#newHackModal"</li>
                        <li><a href="/">Home</a></li>
                        <li><a href="#">Categories</a></li>
                        <li><a href="#">About</a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </div>
    </nav>
    <div class="row">
        <div class="col-lg-3" id="category-wrapper">
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation" class="active"><a href="#" id="Tech.">Tech.</a></li>
                <li role="presentation"><a href="#" id="Health">Health</a></li>
                <li role="presentation"><a href="#" id="Finance">Finance</a></li>
                <li role="presentation"><a href="#" id="Food">Food</a></li>
            </ul>
        </div>
        <div class="col-lg-9" id="feed-wrapper">
            <div id="hackDiv">
                <p id="text">Some random hack concerned with the increase in the productivity of the world and its inhabitants ipsum ento voila yoohoo and yeah thats it</p>
            </div>
        </div>
    </div>

    <div class="modal fade" id="newHackModal" tabindex="-1" role="dialog" aria-labelledby="newPostModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Start Writing</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" action="">
                        <div class="form-group">
                            <label for="author-name" class="col-sm-2 control-label">Category</label>
                            <div class="col-sm-10">
                                <input name='category' type="text" class="form-control" id="author-name" placeholder="Author Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title-name" class="col-sm-2 control-label">Title</label>
                            <div class="col-sm-10">
                                <input name="title" type="text" class="form-control" id="title-name"
                                       placeholder="Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="main-body" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <textarea name="body" class="form-control" rows="10" id="main-body"
                                          placeholder="Pour your thoughts here"></textarea>
                            </div>
                        </div>
                        <p style="color: #e62222" id="newPostError"></p>
                        <button type="submit" class="btn btn-success" style="margin-left: 250px;" id="newPostSubmit"
                                data-loading-text="Submitting..." autocomplete="off">Submit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="main.js"></script>
</body>

</html>
